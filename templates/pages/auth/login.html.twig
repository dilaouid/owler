{% extends "base.html.twig" %}

{% block title %}
    {{ platform_name }} - Connexion
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css">
    <link rel="stylesheet" href="./assets/css/login.css">
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mh-100vh">
            <div class="col-10 col-sm-8 col-md-6 col-lg-6 offset-1 offset-sm-2 offset-md-3 offset-lg-0 align-self-center d-lg-flex align-items-lg-center align-self-lg-stretch bg-white p-5 rounded rounded-lg-0 my-5 my-lg-0" id="login-block">
                <div class="m-auto w-lg-75 w-xl-50">

                    <h2 class="text-info fw-light mb-5">
                        <i class="fas fa-book-open"></i> {{ platform_name }}
                    </h2>

                    <form>
                        <div class="form-group mb-3">
                            <label class="form-label text-secondary">Nom d'utilisateur</label>
                            <input name="username" class="form-control formfield" type="text" required>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label text-secondary">Mot de passe</label>
                            <input name="password" class="form-control formfield" type="password" required>
                        </div>

                        <button id="submit" class="btn btn-info mt-2" type="submit" style="color: var(--bs-white)">Se connecter</button>
                    </form>

                    <p class="mt-3 mb-0">
                        <a class="text-info small" href="#">Mot de passe oubli√© ?</a>
                    </p>

                </div>
            </div>

            <div class="col-lg-6 d-flex align-items-end" id="bg-block" style="background-image:url('./assets/img/auth/login/{{ selected_picture }}');background-size:cover;background-position:center center;">
            </div>
        </div>
    </div>
{% endblock %}



